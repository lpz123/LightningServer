<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maven.lupz.java.LightningServer.database.player.PlayerMapper">

	<!-- 主键自增，主键返回 -->
	<insert id="insertPlayerBean" keyProperty="roleId" useGeneratedKeys="true" parameterType="com.maven.lupz.java.LightningServer.database.player.PlayerBean">
		insert into t_game_role(roleName,level) values(#{roleName},#{level})
	</insert>
	
	<select id="getPlayerBean" parameterType="long" resultType="com.maven.lupz.java.LightningServer.database.player.PlayerBean">
		select * from t_game_role where roleId = #{roleId}
	</select>
	
	<update id="updatePlayerBean" parameterType="com.maven.lupz.java.LightningServer.database.player.PlayerBean">
		update t_game_role set roleName=#{roleName},level=#{level} where roleId=#{roleId}
	</update>

</mapper>